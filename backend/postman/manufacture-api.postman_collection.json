          }
        }
      ]
    },
    {
      "name": "Company Verification",
      "item": [
        {
          "name": "GET /api/companies/:companyId/verification",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/companies/{{companyId}}/verification",
              "host": ["{{baseUrl}}"],
              "path": ["api", "companies", "{{companyId}}", "verification"]
            }
          }
        },
        {
          "name": "POST /api/companies/:companyId/verification",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gstCertificate\": {\n    \"fileName\": \"gst.pdf\",\n    \"mimeType\": \"application/pdf\",\n    \"content\": \"{{gstBase64}}\"\n  },\n  \"aadhaarCard\": {\n    \"fileName\": \"aadhaar.pdf\",\n    \"mimeType\": \"application/pdf\",\n    \"content\": \"{{aadhaarBase64}}\"\n  },\n  \"notes\": \"GST# 22AAAAA0000A1Z5\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/companies/{{companyId}}/verification",
              "host": ["{{baseUrl}}"],
              "path": ["api", "companies", "{{companyId}}", "verification"]
            }
          }
        }
      ]
    },
    {
      "name": "Verification Admin",
      "item": [
        {
          "name": "GET /api/verification-requests",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/verification-requests?status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification-requests"],
              "query": [{"key": "status", "value": "pending"}]
            }
          }
        },
        {
          "name": "PATCH /api/verification-requests/:requestId",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{adminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\",\n  \"notes\": \"Docs verified on call\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/verification-requests/{{requestId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification-requests", "{{requestId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:4000"},
    {"key": "companyId", "value": "<companyObjectId>"},
    {"key": "requestId", "value": "<verificationRequestId>"},
    {"key": "accessToken", "value": ""},
    {"key": "adminToken", "value": ""},
    {"key": "gstBase64", "value": "<base64 GST doc>"},
    {"key": "aadhaarBase64", "value": "<base64 Aadhaar doc>"}
  ]
}
